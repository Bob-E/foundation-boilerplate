  .large-6.columns
    h4 Rendered HTML
    .panel.panel-signup.radius
      p.lead
        'Welcome to this awesome app!
      form data-abide=""
        .row.collapse
          .small-2.columns
            span class="prefix"
              i class="fi-torso-female"
          .small-10.columns
            input type="text" placeholder="username"
        .row.collapse
          .small-2.columns
            span class="prefix"
              i class="fi-mail"
          .small-10.columns
            input type="email" placeholder="email" required=""
            small class="error" A valid email address is required
        .row.collapse
          .small-2.columns
            span class="prefix"
              i class="fi-lock"
          .small-10.columns
            input type="password" placeholder="password" required=""
            small class="error" Enter your password
        input type="submit" value="Sign Up!" class="button"
      p
        'Already have an account?
        = link_to 'Login here &rarr;', '#'
